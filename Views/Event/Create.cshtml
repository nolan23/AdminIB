@model AdminIB.Models.Event

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Add New Event</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <div class="box-body">
                    <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NamaEvent">Nama Event</label>
                        <input asp-for="NamaEvent" class="form-control" type="text" placeholder="Masukkan Nama Event"/>
                    </div>
                    <div class="form-group">
                        <label>Tanggal Mulai</label>
                        <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <!-- <input class="form-control" type="text" name="datetimes" asp-for="StartDate"/> -->
                                  <input class="form-control" type="date"  asp-for="StartDate"/>
                            </div>
                            <!-- <label asp-for="StartDate">Tanggal Mulai</label>
                            <input asp-for="EndDate" class="form-control" type="date"/> -->
                        </div>
                    
                    <div class="form-group">
                        <label>Tanggal Selesai</label>
                        <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <!-- <input class="form-control" type="text" name="datetimes" asp-for="EndDate"/> -->
                                <input class="form-control" type="date"  asp-for="EndDate"/>
                            </div>
                            <!-- <label asp-for="StartDate">Tanggal Mulai</label>
                            <input asp-for="EndDate" class="form-control" type="date"/> -->
                        </div>
                        <div class="form-group">
                            <label asp-for="Description">Deskripsi</label>
                            <textarea asp-for="Description" class="form-control" rows="6" aria-required="true" aria-invalid="true"></textarea>
                        </div>
                        <div class="form-group">
                             <label asp-for="Description">Penyelenggara</label>
                            <input asp-for="Penyelenggara" class="form-control" />
                            
                        </div>
                        <div class="form-group">
                             <label asp-for="Description">Keterangan</label>
                            <input asp-for="Keterangan" class="form-control" />
                            
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-primary">Back to List</a>
                        </div>
                    </form>
                </div>
                
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>

